{
  "name": "sarkar_group_server",
  "version": "1.0.0",
  "description": "The Sarkar Group - SMD project aims to develop a monolithic REST system to manage Construction Equipment Products, Project Control Services, and Employee Management. This system will utilize modern web development tools and follow industry best practices to ensure scalability, maintainability, and security.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "prisma generate",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "deploy": "vercel --prod",
    "test": "vitest --reporter verbose --run"
  },
  "prisma": {
    "seed": "ts-node src/db/seed.ts"
  },
  "keywords": [],
  "author": "A.Hasnat",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.15.1",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.8",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^10.0.0",
    "prisma": "^5.15.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}